<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="laurel"
          fetch="https://github.com/EvolutionX-laurel"
          revision="ten" />

  <remote name="oddlyspaced"
	  fetch="https://github.com/oddlyspaced"
	  revision="evox" />

  <remote name="nullbytepl"
	  fetch="http://gitlab.com/nullbytepl"
	  revision="ten" />

  <remote name="harukeyua"
	  fetch="https://github.com/HarukeyUA"
	  revision="ten" />

  <!-- General repos -->
  <project path="build/make" name="build" remote="laurel">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  
  <!-- System Repos -->
  <project path="system/sepolicy" name="system_sepolicy" remote="laurel" />

  <!-- Device Specific trees -->
  <project path="kernel/xiaomi/laurel_sprout" name="android_kernel_xiaomi_laurel_sprout" remote="harukeyua" />
  <project path="device/xiaomi/laurel_sprout-images" name="device_xiaomi_laurel_sprout-images" remote="nullbytepl" />
  <project path="device/xiaomi/laurel_sprout" name="dt_laurel_sprout" remote="oddlyspaced" />
  <project path="vendor/xiaomi/laurel_sprout" name="vt_laurel_sprout" remote="oddlyspaced" />

</manifest>
